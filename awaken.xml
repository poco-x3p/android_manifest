<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <!-- Github -->
  <remote  name="github"
           fetch="https://github.com/" />

  <!-- GitHub (Project-Awaken) -->
  <remote  name="awaken"
           fetch="https://github.com/poco-x3p/"
           revision="13" />

  <!-- GitHub (Project-Awaken 12) -->
  <remote  name="awaken-12"
           fetch="https://github.com/Project-Awaken/"
           revision="12.1" />

  <!-- GitLab -->
  <remote  name="gitlab"
           revision="12.1"
           fetch="https://gitlab.com/Project-Awaken/" />

  <!-- Rootdir -->
  <project path="bionic" name="android_bionic" groups="pdk" remote="awaken" />
  <project path="manifest" name="android_manifest" remote="awaken" />

  <!-- Build -->
  <project path="build/make" name="android_build" groups="pdk" remote="awaken" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  <project path="build/soong" name="android_build_soong" groups="pdk,tradefed" remote="awaken" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>

  <!-- Device -->
  <project path="device/awaken/sepolicy" name="android_device_awaken_sepolicy" remote="awaken-12" />
  <project path="device/qcom/sepolicy" name="android_device_qcom_sepolicy" groups="qcom,qssi" remote="awaken-12" />
  <project path="device/qcom/sepolicy-legacy" name="android_device_qcom_sepolicy" groups="qcom,pdk-qcom" revision="12.1-legacy" remote="awaken-12" />
  <project path="device/qcom/sepolicy-legacy-um" name="android_device_qcom_sepolicy" groups="qcom,sdm660" revision="12.1-legacy-um" remote="awaken-12" />
  <project path="device/qcom/sepolicy_vndr" name="android_device_qcom_sepolicy_vndr" groups="qcom,lahaina" remote="awaken-12" />

  <!-- External -->
  <project path="external/tinyxml" name="platform/external/tinyxml" groups="pdk" remote="aosp" revision="refs/tags/android-11.0.0_r46" />

  <!-- Frameworks -->
  <project path="frameworks/av" name="android_frameworks_av" remote="awaken" />
  <project path="frameworks/base" name="android_frameworks_base" groups="pdk-cw-fs,pdk-fs" remote="awaken" />
  <project path="frameworks/native" name="android_frameworks_native" groups="pdk-cw-fs,pdk-fs" remote="awaken" />

  <!-- Hardware -->
  <project path="hardware/lineage/interfaces" name="android_hardware_lineage_interfaces" remote="awaken-12" />

  <!-- Packages -->
  <project path="packages/apps/Settings" name="android_packages_apps_Settings" remote="awaken" />
  <project path="packages/apps/SimpleDeviceConfig" name="android_packages_apps_SimpleDeviceConfig" remote="awaken-12" />
  <project path="packages/apps/TouchGestures" name="android_packages_apps_TouchGestures" remote="awaken-12" />
  <project path="packages/apps/Updater" name="android_packages_apps_Updater" remote="awaken-12" />

  <!-- System -->
  <project path="system/core" name="android_system_core" groups="pdk" remote="awaken" />
  <project path="system/sepolicy" name="android_system_sepolicy" remote="awaken" />

  <!-- Vendor -->
  <project path="vendor/awaken" name="android_vendor_awaken" remote="awaken" />
  <project path="vendor/support" name="android_vendor_support" remote="awaken-12" />
  <project path="vendor/qcom/opensource/interfaces" name="android_vendor_qcom_opensource_interfaces" groups="qcom,pdk-qcom" remote="awaken-12" />
  <!-- project path="vendor/gms" name="android_vendor_gms" remote="gitlab" clone-depth="1" /-->

</manifest>
